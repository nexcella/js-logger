{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "es2016", "es2017", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
